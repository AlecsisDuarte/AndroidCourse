<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.com.omnius.preferenciasyalmacenamientoapp" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SP.SharedPreferencesActivity"
            android:label="@string/title_activity_shared_preferences" >
        </activity>
        <activity
            android:name=".SPA.SharedPreferencesScreenActivity"
            android:label="@string/title_activity_shared_preferences_screen" >
        </activity>
        <activity
            android:name=".archivos.AlmacenamientoInternoExterno"
            android:label="@string/title_activity_almacenamiento_interno_externo" >
        </activity>
        <activity
            android:name=".BD.SQLiteActivity"
            android:label="@string/title_activity_sqlite" >
        </activity>
    </application>

</manifest>
