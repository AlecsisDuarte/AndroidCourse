<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.com.omnius.preferenciasyalmacenamientoapp.archivos.AlmacenamientoInternoExterno">

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/text_titulo_uno"/>

    <EditText
        android:id="@+id/edit_texto_archivo_uno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"/>

    <Button
        android:id="@+id/button_guardar_interna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_texto_archivo_uno"
        android:text="@string/texto_button_guardar"/>

    <Button
        android:id="@+id/button_recuperar_interna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_texto_archivo_uno"
        android:layout_alignRight="@+id/edit_texto_archivo_uno"
        android:layout_below="@+id/edit_texto_archivo_uno"
        android:text="@string/texto_button_leer"/>

    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_guardar_interna"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/texto_titulo_dos"/>

    <EditText
        android:id="@+id/edit_texto_archivo_dos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text2"/>

    <Button
        android:id="@+id/button_guardar_externa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_texto_archivo_dos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_texto_archivo_dos"
        android:text="@string/texto_button_guardar"/>

    <Button
        android:id="@+id/button_recuperar_externa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_texto_archivo_dos"
        android:layout_alignRight="@+id/edit_texto_archivo_dos"
        android:layout_below="@+id/edit_texto_archivo_dos"
        android:text="@string/texto_button_leer"/>


</RelativeLayout>
